<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="95dp"
        android:layout_marginTop="32dp"
        android:text="Take note;"
        android:textColor="@color/red"
        android:textSize="35sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="102dp"
        android:textColor="@color/red"
        android:textSize="18sp"
        android:textStyle="italic"
        android:text="*Categories your list in order to avoid chaos on making daily activity" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="174dp"
        android:layout_marginEnd="3dp"
        android:text="*Make sure to update daily in order you keep a presentable document incase of issues emanating from customers."
        android:textColor="@color/red"
        android:textSize="18sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/mBExpenses"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="416dp"
        android:text="Expenses"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/mBReceived"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="510dp"
        android:text="Received"
        android:textSize="30sp"
        android:textStyle="bold" />


</RelativeLayout>
